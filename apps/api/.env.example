# Database url for connection
DATABASE_URL=""

# Database connection settings
DATABASE_POOL_SIZE=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_CONNECTION_TIMEOUT_MS=5000
DATABASE_IDLE_TIMEOUT_MS=30000

# Server configuration
NODE_ENV=development
PORT=3000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173

# BCV scraping configuration
BCV_ALLOW_INSECURE_TLS=false

# Custom rates configuration
CUSTOM_RATES_MAX_PER_USER=10

# Firebase Admin (API-side) auth verification
#
# Provide ONE of the following options:
# 1) FIREBASE_SERVICE_ACCOUNT_JSON (recommended) - the full service account JSON string
# 2) FIREBASE_PROJECT_ID + FIREBASE_CLIENT_EMAIL + FIREBASE_PRIVATE_KEY
# 3) GOOGLE_APPLICATION_CREDENTIALS (used by applicationDefault())
FIREBASE_SERVICE_ACCOUNT_JSON=""
FIREBASE_PROJECT_ID=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_PRIVATE_KEY=""
# GOOGLE_APPLICATION_CREDENTIALS="/absolute/path/to/serviceAccount.json"
