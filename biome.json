{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
      "experimentalScannerIgnores": ["**/dist/**", "**/generated/**"]
    },
    "linter": { "enabled": true },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "assist": {
      "actions": {
        "source": {
          "organizeImports": "on"
        }
      }
    }
  }